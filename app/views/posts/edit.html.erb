<section class="edit-post">
  <h2 class="main-header">Edit your Post</h2>

  <form action='/posts/<%=@post.id%>' method="post" accept-charset="utf-8" id='edit-post'>
    <label for='title'>Title</label>
    <input type='text' name='title' id='title' value='<%=@post.title%>'/>
    <label for='author'>Author</label>
    <input type='text' name='author' id='author' value='<%=@post.author%>'/>
    <label for='body'>Body</label>
    <textarea name='body' id='body'><%=@post.body%></textarea>

    <input type='submit' name='commit' id='edit_post'  />
  </form>
</sectionn>
